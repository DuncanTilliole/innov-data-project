{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <h1>Inscription</h1>
    
    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr':{'placeholder': 'Pseudo'}})}}
    {{ form_row(form.email, {'label': 'Adresse mail','attr':{'placeholder': 'exemple@exemple.com'}})}}
    {{ form_row(form.password, {'label': 'Mot de passe','attr':{'placeholder': 'Mot de passe'}})}}
    {{ form_row(form.confirm_password, {'label': 'Mot de passe de confirmation','attr':{'placeholder': 'Confirmation de mot de passe'}})}}
    <br><button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}